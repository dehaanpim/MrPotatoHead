<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pimdehaan.mrpotatohead.MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <CheckBox
                android:text="Hat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CheckHat"
                android:onClick="CheckboxClicked"/>

            <CheckBox
                android:text="Eyebrows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tableLayout"
                android:id="@+id/CheckEyebrows"
                android:onClick="CheckboxClicked"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:text="Ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckEars"
                android:onClick="CheckboxClicked" />

            <CheckBox
                android:text="Eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckEyes"
                android:onClick="CheckboxClicked" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:text="Glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckGlasses"
                android:onClick="CheckboxClicked" />

            <CheckBox
                android:text="Nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckNose"
                android:onClick="CheckboxClicked" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <CheckBox
                android:text="Arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckArms"
                android:onClick="CheckboxClicked" />

            <CheckBox
                android:text="Mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckMustache"
                android:onClick="CheckboxClicked" />
        </TableRow>

        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:text="Mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckMouth"
                android:onClick="CheckboxClicked" />

            <CheckBox
                android:text="Shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CheckShoes"
                android:onClick="CheckboxClicked" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="249dp"
            app:srcCompat="@drawable/body"
            android:id="@+id/Body" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="257dp"
            app:srcCompat="@drawable/arms"
            android:id="@+id/Arms"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            app:srcCompat="@drawable/ears"
            android:id="@+id/Ears"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="228dp"
            app:srcCompat="@drawable/eyebrows"
            android:id="@+id/Eyebrows"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="236dp"
            app:srcCompat="@drawable/eyes"
            android:id="@+id/Eyes"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="249dp"
            app:srcCompat="@drawable/glasses"
            android:id="@+id/Glasses"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="191dp"
            app:srcCompat="@drawable/hat"
            android:id="@+id/hat"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="239dp"
            app:srcCompat="@drawable/mouth"
            android:id="@+id/Mouth"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            app:srcCompat="@drawable/mustache"
            android:id="@+id/Mustache"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="221dp"
            app:srcCompat="@drawable/nose"
            android:id="@+id/Nose"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="253dp"
            app:srcCompat="@drawable/shoes"
            android:id="@+id/Shoes"
            android:visibility="invisible" />
    </FrameLayout>

</RelativeLayout>
